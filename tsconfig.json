{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"jsx": "react",
		"lib": ["esnext", "dom"],
		"allowJs": true,
		"checkJs": true,
		"outDir": "./dist/",
		"removeComments": true,
		"downlevelIteration": true,
		"strict": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"Components": [
				"src/components"
			],
			"Theme": [
				"../../src/theme"
			],
			"Assets": [
				"../../src/assets"
			]	
		},
		"typeRoots": [
			"/src/typings"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}