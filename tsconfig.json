{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"checkJs": true,
		"downlevelIteration": true,
		"importHelpers": true,
		"jsx": "react",
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"outDir": "./dist/",
		"paths": {
			"Components/*": ["components/*"],
			"Theme": ["theme/*"],
			"Assets/*": ["assets/*"],
			"Src/*": ["*"]
		},
		"plugins": [{ "name": "typescript-styled-plugin" }],
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5"
	},
	"exclude": [ "node_modules", "dist"],
	"include": [ "src/**/*" ]
}