{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended", "tslint-react", "tslint-react-hooks"],
	"jsRules": true,
	"rules": {
		"arrow-parens": [true, "ban-single-arg-parens"],
		"class-name": true,
		"curly": [true, "as-needed"],
		"comment-format": false,
		"indent": [true, "tabs", 4],
		"interface-name": [true, "always-prefix"],
		"jsx-alignment": false,
		"jsx-curly-spacing": ["always"],
		"jsx-boolean-value": ["never"],
		"jsx-no-multiline-js": false,
		"jsx-no-lambda": false,
		"linebreak-style": [true, "CRLF"],
		"member-ordering": false,
		"max-classes-per-file": [true, 2],
		"no-consecutive-blank-lines": [true, 3],
		"no-console": false,
		"no-empty-interface": true,
		"no-trailing-whitespace": [true, "ignore-blank-lines"],
		"no-unused-expression": [true, "allow-new"],
		"no-duplicate-variable": true,
		"no-duplicate-imports": true,	
		"ordered-imports": false,
		"object-literal-sort-keys": [false, "match-declaration-order"],
		"one-line": [true, "check-catch", "check-finally"],
		"only-arrow-functions": true,
		"quotemark": [true, "single"],
		"prefer-readonly": true,
		"promise-function-async": true,
		"react-hooks-nesting": "error",
		"switch-final-break": true,
		"trailing-comma": false,
		"variable-name": false
	},
	"rulesDirectory": []
}
